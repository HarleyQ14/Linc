<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.syntacticsugar.linc"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/DialtactsTheme" >
        <activity
            android:name=".MainMenu"
            android:label="@string/title_activity_main_menu" 
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.BasicInfo"
            android:label="@string/title_activity_basic_info" 
            android:windowSoftInputMode="stateHidden">
        </activity>
        <activity
            android:name=".activity.Abilities"
            android:label="@string/title_activity_abilities" 
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name=".activity.Combat"
            android:label="@string/title_activity_combat"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name=".activity.Characters"
            android:label="@string/title_activity_characters"
            android:windowSoftInputMode="stateHidden" >
        </activity>
    </application>

</manifest>